<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/ground">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:background="@drawable/map"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="I AM"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:fontFamily="@font/halva"
            android:textStyle="bold"
            android:layout_margin="20dp"/>
        <Button
            android:id="@+id/btn_customer"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Customer"
            android:background="@drawable/modern_button"
            android:textColor="@color/main"
            android:textSize="32sp"
            android:fontFamily="@font/halva"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="12dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">
            <ImageView
                android:layout_width="95dp"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="OR"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/halva"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>

            <ImageView
                android:layout_width="95dp"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_gravity="center"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_driver"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Captain"
            android:background="@drawable/modern_button2"
            android:textColor="@color/acc"
            android:textStyle="bold"
            android:textSize="32sp"
            android:fontFamily="@font/halva"
            android:paddingStart="10dp"
            android:paddingEnd="14dp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/g1"
        android:scaleType="centerCrop"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/g2"
        android:scaleType="centerCrop"/>



</RelativeLayout>